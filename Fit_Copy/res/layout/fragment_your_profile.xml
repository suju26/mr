<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@id/card_parent_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:divider="@drawable/empty_tall_divider"
        android:orientation="vertical"
        android:padding="5.0dip"
        android:showDividers="middle" >

        <LinearLayout
            android:id="@+id/main_wrapper"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:padding="5.0dip"
                android:background="#0288D1" >

                <TextView
                    android:id="@id/textView_first"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1.0"
                    android:text="Profile"
                    android:textAppearance="?android:textAppearanceMedium" />

                <Button
                    android:id="@id/profile_help"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.50"
                    android:ems="5"
                    android:gravity="center"
                    android:text="i"
                    android:background="@drawable/ripple"
                    android:textAppearance="?android:textAppearanceSmall" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5.0dip" >

                <TextView
                    android:id="@id/textView_first"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1.0"
                    android:text="@string/label_age"
                    android:textAppearance="?android:textAppearanceMedium" />

                <EditText
                    android:id="@id/profile_ui_age"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:textAppearance="?android:textAppearanceSmall" />

                <TextView
                    android:id="@id/profile_ui_age"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.50"
                    android:ems="5"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="years"
                    android:textAppearance="?android:textAppearanceSmall" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5.0dip" >

                <TextView
                    android:id="@id/textView22"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1.0"
                    android:text="@string/profile_sex_text"
                    android:textAppearance="?android:textAppearanceMedium" />

                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:checkedButton="@+id/profile_ui_male_radio"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@id/profile_ui_male_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:checked="false"
                        android:text="Male"
                        android:textColor="#ff4d4d4d" />

                    <RadioButton
                        android:id="@id/profile_ui_female_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:checked="false"
                        android:text="Female"
                        android:textColor="#ff4d4d4d" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@id/profile_height_ftin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:measureWithLargestChild="false"
                android:orientation="horizontal"
                android:padding="5.0dip" >

                <TextView
                    android:id="@id/textView23"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1.0"
                    android:text="@string/profile_height_text"
                    android:textAppearance="?android:textAppearanceMedium" />

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@id/profile_ui_height_cm"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="number|none"
                        android:textAppearance="?android:textAppearanceSmall" >

                        <requestFocus />
                    </EditText>

                    <EditText
                        android:id="@id/profile_ui_height_inch"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="number"
                        android:selectAllOnFocus="true"
                        android:textAppearance="?android:textAppearanceSmall" />

                    <TextView
                        android:id="@id/profile_ui_age"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.50"
                        android:ems="5"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="ft/inch"
                        android:textAppearance="?android:textAppearanceSmall" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5.0dip" >

                <TextView
                    android:id="@id/textView28"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1.0"
                    android:text="@string/profile_weight_label"
                    android:textAppearance="?android:textAppearanceMedium" />

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@id/profile_ui_weight"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="80.0"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="number"
                        android:selectAllOnFocus="true"
                        android:textAppearance="?android:textAppearanceSmall" />

                    <TextView
                        android:id="@id/profile_weight_label"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="20.0"
                        android:paddingLeft="2.0dip"
                        android:text="@string/profile_kg_text"
                        android:textAppearance="?android:textAppearanceSmall" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5.0dip" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5.0dip" >

                <TextView
                    android:id="@id/textView30"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1.0"
                    android:text="@string/profile_activity_label"
                    android:textAppearance="?android:textAppearanceMedium" />

                <Spinner
                    android:id="@id/spinnerprofile_ui_activity"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="2.0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:padding="5.0dip" >

                <Button
                    android:id="@+id/btn_bmi"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple"
                    android:onClick="bmi_calculation"
                    android:padding="5.0dip"
                    android:text="Click to Know Your Current Health Status"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5.0dip" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/macro"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:padding="5.0dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:id="@id/textView"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center_horizontal"
                    android:text="@string/label_tdee"
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:id="@+id/txt_result"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/result_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal" >
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text=" "
                android:textAppearance="?android:textAppearanceMedium" />

            <TextView
                android:id="@id/textView2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/label_goal"
                android:textAppearance="?android:textAppearanceMedium" />

            <Spinner
                android:id="@+id/macro_goal_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:prompt="@string/spinner_goal" />

            <LinearLayout
                android:id="@id/macro_goal_section_calculated"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="5.0dip" >

                <TextView
                    android:id="@id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/label_goal_calories"
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:id="@id/macro_goal_calories_calculated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="0"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/result_color" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/macro"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:padding="5.0dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:padding="5.0dip" >

                <TextView
                    android:id="@id/textView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="5.0dip"
                    android:text="@string/label_choose_nutrition_plan"
                    android:textAppearance="?android:textAppearanceMedium" />

                <Spinner
                    android:id="@id/macro_nutrition_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="5.0dip"
                    android:prompt="@string/spinner_goal" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text=" "
                    android:textAppearance="?android:textAppearanceMedium" />

                <LinearLayout
                    android:id="@id/macro_calculated_split_section"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="5.0dip" >

                    <TextView
                        android:id="@id/textView2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/label_your_macro_split"
                        android:textAppearance="?android:textAppearanceMedium" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@id/textView3"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:gravity="center_horizontal"
                            android:text="@string/label_protein"
                            android:textAppearance="?android:textAppearanceMedium" />

                        <TextView
                            android:id="@id/textView4"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:gravity="center_horizontal"
                            android:text="@string/label_fat"
                            android:textAppearance="?android:textAppearanceMedium" />

                        <TextView
                            android:id="@id/textView5"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:gravity="center_horizontal"
                            android:text="@string/label_carb"
                            android:textAppearance="?android:textAppearanceMedium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@id/macro_protein_percentage_calculated"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:gravity="center_horizontal"
                            android:text="0%"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="@color/result_color" />

                        <TextView
                            android:id="@id/macro_fat_percentage_calculated"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:gravity="center_horizontal"
                            android:text="0%"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="@color/result_color" />

                        <TextView
                            android:id="@id/macro_carb_percentage_calculated"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:gravity="center_horizontal"
                            android:text="0%"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="@color/result_color" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@id/macro_manual_split_section"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="5.0dip" >

                    <TextView
                        android:id="@id/textView6"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/label_your_macro_split"
                        android:textAppearance="?android:textAppearanceMedium" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@id/textView7"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:gravity="center_horizontal"
                            android:text="@string/label_protein"
                            android:textAppearance="?android:textAppearanceMedium" />

                        <TextView
                            android:id="@id/textView8"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:gravity="center_horizontal"
                            android:text="@string/label_fat"
                            android:textAppearance="?android:textAppearanceMedium" />

                        <TextView
                            android:id="@id/textView9"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:gravity="center_horizontal"
                            android:text="@string/label_carb"
                            android:textAppearance="?android:textAppearanceMedium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@id/macro_protein_percentage_manual"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:ems="10"
                            android:gravity="center_horizontal"
                            android:inputType="number"
                            android:selectAllOnFocus="true"
                            android:text="0%"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="@color/result_color" />

                        <TextView
                            android:id="@id/macro_fat_percentage_manual"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:ems="10"
                            android:gravity="center_horizontal"
                            android:inputType="number"
                            android:selectAllOnFocus="true"
                            android:text="0%"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="@color/result_color" />

                        <TextView
                            android:id="@id/macro_carb_percentage_manual"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:ems="10"
                            android:gravity="center_horizontal"
                            android:inputType="number"
                            android:selectAllOnFocus="true"
                            android:text="0%"
                            android:textAlignment="4"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="@color/result_color" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical"
                    android:padding="5.0dip" >

                    <Button
                        android:id="@+id/btn_save_macro"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ripple"
                        android:padding="5.0dip"
                        android:text="Save Now"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@android:color/black" />

                    <View
                        android:id="@id/view1"
                        android:layout_width="fill_parent"
                        android:layout_height="2.0dip"
                        android:layout_alignTop="@id/text_current_playback_title"
                        android:background="#448AFF" />

                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>